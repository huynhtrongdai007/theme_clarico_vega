<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="place_into_bar" inherit_id="website.snippets" name="Place into bar">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
        <t t-snippet="theme_81_restaurant.s_banner"
                t-thumbnail="/theme_81_restaurant/static/src/img/ui/snippet.jpg"/>
    </xpath>
                                                                                                                        
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
        <t t-snippet="theme_81_restaurant.image_text"
                t-thumbnail="/theme_81_restaurant/static/src/img/ui/snippet.jpg"/>
    </xpath>

    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
        <t t-snippet="theme_81_restaurant.testimonials_two"
                t-thumbnail="/theme_81_restaurant/static/src/img/ui/snippet.jpg"/>
    </xpath>
</template>

    <template id="s_banner" name="banner">
        <section class="inner-banner">
            <div class="image-layer" style="background-image: url(/theme_81_restaurant/static/src/img/background/banner-image-4.jpg);"></div>
            <div class="auto-container">
                <div class="inner">
                    <div class="subtitle"><span>any query ?</span></div>
                    <div class="pattern-image"><img src="theme_81_restaurant/static/src/img/icons/separator.svg" alt="" title=""/></div>
                    <h1><span>Contact Us</span></h1>
                </div>
            </div>
        </section>
    </template>

    <template id="image_text" name="Image Text">
    <section class="chef-section">
        <div class="right-bg"><img src="/theme_81_restaurant/static/src/img/background/bg-26.png" alt="" title=""/></div>
        <div class="auto-container">
            <div class="row clearfix">
                <!--Col-->
                <div class="image-col col-xl-6 col-lg-6 col-md-12 col-sm-12">
                    <div class="inner wow fadeInLeft" data-wow-duration="1500ms" data-wow-delay="0ms">
                        <div class="image"><img src="/theme_81_restaurant/static/src/img/resource/mainchef.jpg" alt=""/></div>
                    </div>
                </div>
                <!--Col-->
                <div class="content-col col-xl-6 col-lg-6 col-md-12 col-sm-12">
                    <div class="inner clearfix wow fadeInRight" data-wow-duration="1500ms" data-wow-delay="0ms">
                        <div class="content-box">
                            <div class="title-box">
                                <div class="subtitle"><span>35 year of experience</span></div>
                                <div class="pattern-image"><img src="/theme_81_restaurant/static/src/img/icons/separator.svg" alt="" title=""/></div>
                                <h2>Award Winning Chef</h2>
                                <div class="text">Lorem Ipsum is simply dummy text of the printingand typesetting industry lorem Ipsum has been the industrys standard dummy text ever since the when an unknown printer took a galley of type.</div>
                            </div>
                            <div class="info">
                                <div class="signature"><img src="/theme_81_restaurant/static/src/img/resource/signature-2.png" alt="" title=""/></div>
                                <div class="author">Henry - EXCUTIVE CHEF</div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    </template>



